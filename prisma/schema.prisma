datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

generator kysely {
  provider = "prisma-kysely"

  output   = "../src/lib/db"
  fileName = "schema.d.ts"
}

model SharedLink {
  id String @id

  sheet_id String

  /// @kyselyType('read' | 'write')
  access_type String

  created_at DateTime
  expires_at DateTime?

  sheet Sheet @relation(fields: [sheet_id], references: [id])
}

model Sheet {
  id   String @id
  name String

  created_at DateTime
  opened_at  DateTime?
  updated_at DateTime
  deleted_at DateTime?

  data String

  shared_links SharedLink[]
}

model User {
  id String @id

  username String
  password String

  created_at DateTime

  sessions Session[]

  @@index([username])
}

model Session {
  id String @id

  expires_at Int

  user_id String
  user    User   @relation(fields: [user_id], references: [id])
}
