datasource db {
  provider = "sqlite"
  url      = "file:../data/data.db"
}

generator kysely {
  provider = "prisma-kysely"

  output   = "../src/lib/db"
  fileName = "schema.d.ts"
}

model Sheet {
  id   String @id
  name String

  created_at DateTime
  opened_at  DateTime?
  updated_at DateTime
  deleted_at DateTime?

  data String
}

model User {
  id String @id

  username String
  password String

  created_at DateTime

  sessions Session[]

  @@index([username])
}

model Session {
  id String @id

  expires_at Int

  user_id String
  user    User   @relation(fields: [user_id], references: [id])
}
